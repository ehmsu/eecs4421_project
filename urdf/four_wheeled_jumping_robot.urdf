<?xml version="1.0"?>
<robot name="four_wheeled_jumping_robot">

  <!-- Main body mesh chassis -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="../meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 0.9 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="../meshes/base_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/>
      <mass value="2"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- Central hopping foot -->
  <link name="jump_foot">
    <visual>
      <origin xyz="0 0 -0.14" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.025"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 -0.14" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.045" length="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 -0.14" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="0.0003" ixy="0" ixz="0" iyy="0.0003" iyz="0" izz="0.0003"/>
    </inertial>
  </link>

  <!-- Prismatic hopping joint along Z-axis -->
  <joint name="jump_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="jump_foot"/>
    <origin xyz="0 0 -0.085" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="0.13" effort="700" velocity="8"/>
  </joint>

</robot>
