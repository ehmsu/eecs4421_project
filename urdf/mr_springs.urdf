<?xml version="1.0"?>
<robot name="mr_springs">
  <material name="gray"><color rgba="0.6 0.6 0.6 1"/></material>
  <material name="red"><color rgba="0.8 0.1 0.1 1"/></material>
  <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>

  <link name="foot">
    <inertial><origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia ixx="2.7e-4" iyy="2.7e-4" izz="4.5e-4" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual><origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.06" length="0.02"/></geometry>
      <material name="black"/>
    </visual>
    <collision><origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><cylinder radius="0.06" length="0.02"/></geometry>
    </collision>
  </link>

  <link name="body">
    <inertial><origin xyz="0 0 0.125" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="1.1e-3" iyy="1.1e-3" izz="2.5e-3" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual><origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.25"/></geometry>
      <material name="gray"/>
    </visual>
    <collision><origin xyz="0 0 0.125" rpy="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.25"/></geometry>
    </collision>
  </link>

  <joint name="leg_joint" type="prismatic">
    <parent link="foot"/><child link="body"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.20" effort="1000" velocity="3.0"/>
    <dynamics damping="8.0" friction="0.0"/>
  </joint>

  <link name="cap">
    <inertial><origin xyz="0 0 0.26" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-6" iyy="1e-6" izz="1e-6" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual><origin xyz="0 0 0.26" rpy="0 0 0"/>
      <geometry><sphere radius="0.02"/></geometry>
      <material name="red"/>
    </visual>
    <collision><origin xyz="0 0 0.26" rpy="0 0 0"/>
      <geometry><sphere radius="0.02"/></geometry>
    </collision>
  </link>

  <joint name="cap_fixed" type="fixed">
    <parent link="body"/><child link="cap"/>
    <origin xyz="0 0 0.135" rpy="0 0 0"/>
  </joint>
</robot>
